<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    tools:context=".ui.details.detail.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:background="@color/card_back_color"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_25"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/saveStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Save"
            android:textColor="@color/textColor"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_check_25"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/saveStr"
            app:layout_constraintBottom_toBottomOf="@id/saveStr"
            app:layout_constraintEnd_toStartOf="@id/saveStr"/>

        <TextView
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@id/save"
            app:layout_constraintEnd_toEndOf="@id/saveStr"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/category"
        android:background="@color/card_back_color"
        app:layout_constraintTop_toBottomOf="@id/action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginVertical="7dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/category_back"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/todo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/todo_Str"
                android:backgroundTint="@color/todo"
                android:background="@drawable/img_back"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/todo"
                app:layout_constraintBottom_toBottomOf="@id/todo"
                app:layout_constraintStart_toStartOf="@id/todo"
                app:layout_constraintEnd_toEndOf="@id/todo"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_baseline_sticky_note_2_24"/>
            <TextView
                android:id="@+id/todo_Str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/todo"
                app:layout_constraintEnd_toEndOf="@id/todo"
                app:layout_constraintTop_toBottomOf="@id/todo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:text="ToDo"/>
            <TextView
                android:id="@+id/birthday"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/img_back"
                android:backgroundTint="@color/birthday"
                app:layout_constraintStart_toEndOf="@id/todo"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/birthday"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/birthday"
                app:layout_constraintStart_toStartOf="@id/birthday"
                app:layout_constraintEnd_toEndOf="@id/birthday"
                android:background="@drawable/ic_baseline_card_giftcard_24"/>
            <TextView
                android:id="@+id/birthdayStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:text="Birthday"
                app:layout_constraintStart_toStartOf="@id/birthday"
                app:layout_constraintEnd_toEndOf="@id/birthday"
                app:layout_constraintTop_toBottomOf="@id/birthday"/>

            <TextView
                android:id="@+id/payment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/img_back"
                android:backgroundTint="@color/payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/birthday"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toTopOf="@id/payment"
                app:layout_constraintBottom_toBottomOf="@id/payment"
                app:layout_constraintStart_toStartOf="@id/payment"
                app:layout_constraintEnd_toEndOf="@id/payment"
                android:background="@drawable/ic_baseline_monetization_on_24"/>
            <TextView
                android:id="@+id/paymentStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/payment"
                app:layout_constraintEnd_toEndOf="@id/payment"
                app:layout_constraintTop_toBottomOf="@id/payment"
                android:text="Payment"
                android:textColor="#AAAAAA"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <View
        android:id="@+id/categoryLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/category"
        android:background="#FBC02D"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/categoryLine"
        android:layout_marginTop="5dp"
        android:background="@drawable/card_back">
        <EditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="7dp"
            android:hint="Title"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Description"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toBottomOf="@id/Name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note"
        android:background="@drawable/card_back"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Alert"
            android:layout_margin="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_library_music_25"
            app:layout_constraintTop_toBottomOf="@id/alert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/alert"/>

        <TextView
            android:id="@+id/sound_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/card_back_2"
            android:paddingHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:paddingVertical="2dp"
            android:text="default"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/alert"
            app:layout_constraintTop_toBottomOf="@id/alert" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textColor"
            app:layout_constraintTop_toTopOf="@id/sound_change_btn"
            app:layout_constraintBottom_toBottomOf="@id/sound_change_btn"
            app:layout_constraintStart_toEndOf="@id/sound_change_btn"
            android:background="@drawable/ic_baseline_play_arrow_25"
            android:layout_marginStart="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back"
        app:layout_constraintTop_toBottomOf="@id/sound"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/remind_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Remind time"
            android:layout_margin="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintTop_toBottomOf="@id/remind_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/time"
            android:textColor="@color/textColor"
            android:text="11.11.2022"
            android:background="@drawable/card_back_2"
            android:textSize="16sp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="2dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/date"
            app:layout_constraintTop_toTopOf="@id/date"
            app:layout_constraintBottom_toBottomOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:text="22:32"
            android:background="@drawable/card_back_2"
            android:paddingVertical="2dp"
            android:paddingHorizontal="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>