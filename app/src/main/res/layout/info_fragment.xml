<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.details.info.InfoFragment">
<ImageView
    android:id="@+id/icon_back"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/black"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/editBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/icon_back"
        app:layout_constraintEnd_toStartOf="@id/completeBack"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_buttons_back"/>
    <TextView
        android:id="@+id/completeBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintStart_toEndOf="@id/editBack"
        app:layout_constraintTop_toTopOf="@id/editBack"
        app:layout_constraintEnd_toStartOf="@id/deleteBack"
        android:background="@drawable/edit_buttons_back"/>
    <TextView
        android:id="@+id/deleteBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#E91E63"
        app:layout_constraintStart_toEndOf="@id/completeBack"
        app:layout_constraintTop_toTopOf="@id/editBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_buttons_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/editBack"
        app:layout_constraintEnd_toEndOf="@id/editBack"
        app:layout_constraintTop_toTopOf="@id/editBack"
        app:layout_constraintBottom_toBottomOf="@id/editBack"
        android:background="@drawable/ic_outline_edit_44"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/completeBack"
        app:layout_constraintEnd_toEndOf="@id/completeBack"
        app:layout_constraintTop_toTopOf="@id/completeBack"
        app:layout_constraintBottom_toBottomOf="@id/completeBack"
        android:background="@drawable/ic_outline_check_box_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/deleteBack"
        app:layout_constraintEnd_toEndOf="@id/deleteBack"
        app:layout_constraintTop_toTopOf="@id/deleteBack"
        app:layout_constraintBottom_toBottomOf="@id/deleteBack"
        android:background="@drawable/ic_baseline_delete_outline_24"/>
    <TextView
        android:id="@+id/Icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/icon_back"
        app:layout_constraintEnd_toEndOf="@id/icon_back"
        app:layout_constraintTop_toTopOf="@id/icon_back"
        app:layout_constraintBottom_toBottomOf="@id/icon_back"
        android:backgroundTint="@color/white"
        android:background="@drawable/ic_baseline_sticky_note_2_24"/>

    <View
        android:id="@+id/line"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_back"
        app:layout_constraintBottom_toBottomOf="@id/songIcon"
        android:background="#009688"/>

    <TextView
        android:id="@+id/titleStr"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintStart_toEndOf="@id/line"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#009688"/>
    <TextView
        android:id="@+id/titleIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/titleStr"
        app:layout_constraintTop_toBottomOf="@id/titleStr"
        android:background="@drawable/edit_buttons_back"
        android:text="song"
        android:textColor="#009688"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/titleIcon"
        app:layout_constraintTop_toTopOf="@id/titleIcon"
        android:layout_marginHorizontal="10dp"
        android:text="Test title"
        android:textColor="@color/textColor"/>
    <TextView
        android:id="@+id/descriptionStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/titleStr"
        app:layout_constraintTop_toBottomOf="@id/titleIcon"
        android:layout_marginTop="7dp"
        android:textColor="#009688"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/descriptionStr"
        app:layout_constraintTop_toBottomOf="@id/descriptionStr"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:text="This is descpription test"
        android:textColor="@color/textColor"/>
    <TextView
        android:id="@+id/dateStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/titleStr"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginTop="7dp"
        android:textColor="#009688"/>
    <TextView
        android:id="@+id/dateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/dateStr"
        app:layout_constraintTop_toBottomOf="@id/dateStr"
        android:background="@drawable/ic_baseline_access_alarm_24"
        android:textColor="#009688"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dateIcon"
        app:layout_constraintBottom_toBottomOf="@id/dateIcon"
        app:layout_constraintStart_toEndOf="@id/dateIcon"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:text="[tue] 19.11.2022 | 09:24"
        android:textColor="@color/textColor"/>


    <TextView
        android:id="@+id/songStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dateIcon"
        app:layout_constraintStart_toStartOf="@id/titleStr"
        android:layout_marginTop="7dp"
        android:text="song"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#009688"/>

    <TextView
        android:id="@+id/songIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/songStr"
        app:layout_constraintStart_toStartOf="@id/titleStr"
        android:backgroundTint="@color/textColor"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_baseline_library_music_25" />
    <TextView
        android:id="@+id/song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/songIcon"
        app:layout_constraintStart_toEndOf="@id/songIcon"
        app:layout_constraintBottom_toBottomOf="@id/songIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="default song"
        android:textColor="@color/textColor"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/titleIcon"
        app:layout_constraintBottom_toBottomOf="@id/titleIcon"
        app:layout_constraintStart_toStartOf="@id/titleIcon"
        app:layout_constraintEnd_toEndOf="@id/titleIcon"
        android:background="@drawable/ic_baseline_sticky_note_2_24"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_baseline_arrow_back_25"
        android:layout_margin="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>